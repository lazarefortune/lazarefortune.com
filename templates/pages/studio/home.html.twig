{% extends 'layouts/studio/base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}

    <h1 class="mt-4 text-2xl sm:text-2xl font-semibold text-slate-950 dark:text-white">
        Salut, <span class="text-primary-700 dark:text-primary-400">{{ app.user.fullname }}</span> !
    </h1>

    {% if is_granted('ROLE_AUTHOR') %}

    <div class="mt-6 grid gap-8 sm:grid-cols-2 xl:grid-cols-4">
        <div>
            <hr role="presentation" class="w-full border-t border-zinc-950/10 dark:border-white/10">
            <div class="mt-6 text-muted text-lg font-medium sm:text-base">Vos Vidéos</div>
            <div class="mt-3 text-3xl font-semibold sm:text-2xl">{{ countAuthorCourses }}</div>
            <a href="{{ path('studio_course_new') }}" class="mt-4 btn btn-primary">Créer une nouvelle vidéo</a>
        </div>
        <div>
            <hr role="presentation" class="w-full border-t border-zinc-950/10 dark:border-white/10">
            <div class="mt-6 text-muted text-lg font-medium sm:text-base">Vidéos de la chaîne</div>
            <div class="mt-3 text-3xl font-semibold sm:text-2xl">{{ countOnlineCourses }}</div>
        </div>
    </div>

    {% include 'pages/admin/partials/_last_course.html.twig' with { 'lastCourses': lastCourses } %}
    {% endif %}

{% endblock %}
