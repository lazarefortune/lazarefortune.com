{% extends 'layouts/public/base.html.twig' %}

{% block title 'Vidéos Premium' ~ ((page > 1) ? (', page ' ~ page) : '') %}

{% block body %}
    <div>
        <div class="container-box py-10 stack-large">

            <div class="course__hero text-center">
                {% if page == 1 %}
                    <h1 class="text-4xl font-medium text-slate-900 dark:text-white">
                        Les <span class="text-primary-600 dark:text-primary-400">vidéos premium</span>
                    </h1>
                    <p class="text-base text-slate-600 dark:text-slate-400 mt-2 max-w-2xl mx-auto">
                        Accède à du contenu exclusif réservé aux membres premium. Débloque ton potentiel de développeur.
                    </p>
                {% else %}
                    <h1 class="text-3xl font-medium text-slate-900 dark:text-white">
                        Vidéos Premium <span class="text-lg text-slate-500 dark:text-slate-400">— page {{ page }}</span>
                    </h1>
                {% endif %}
            </div>

            <div class="courses mt-8">
                {% for course in courses %}
                    {% include 'pages/public/courses/_course_item.html.twig' with { 'course': course } %}
                {% endfor %}
            </div>

            <div class="flex justify-center mt-6">
                {{ knp_pagination_render(courses) }}
            </div>
        </div>
    </div>
{% endblock %}