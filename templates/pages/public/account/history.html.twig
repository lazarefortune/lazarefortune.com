{% extends 'layouts/public/base.html.twig' %}
{% block title %}Historique{% endblock %}

{% block body %}
    <div class="container-box py-6">

        {% include 'partials/_breadcrumb.html.twig' with {
            items: [
                { label: 'Mon compte', path: path('app_account_index') },
                { label: 'Historique' }
            ]
        } %}

        <div class="mb-6">
            <h1 class="h2 mb-1">Historique de visionnage</h1>
        </div>

        {% if watchlist is empty %}
            <div class="p-10 text-center flex flex-col items-center justify-center space-y-5">
                <img src="{{ asset('images/illustrations/playlist-website.svg') }}"
                     alt="Créer une vidéo"
                     class="w-full max-w-44 h-auto opacity-90 dark:opacity-80"
                >

                <div>
                    <h2 class="h4">
                        C'est un peu vide ici
                    </h2>
                    <p class="mt-2 text-base text-muted max-w-lg">
                        Commence à regarder des vidéos pour remplir cet espace
                    </p>
                </div>


                <a href="{{ path('app_course_index') }}" class="btn btn-primary inline-flex items-center gap-2">
                    {{ icon('play') }}
                    <span>Commencer à regarder</span>
                </a>
            </div>

            {% else %}
                <div class="courses">
                    {% for progress in watchlist %}
                        {% include 'pages/public/account/_progress-card.html.twig' with { progress: progress } %}
                    {% endfor %}
                </div>
            {% endif %}
    </div>
{% endblock %}
