{% extends 'layouts/public/base.html.twig' %}

{% block title 'Mon compte' %}

{% block body %}

    <div class="page-header">
        <div class="container-box">
            <div class="stack">
                <div class="flex flex-col md:flex-row md:justify-start items-center gap-2">
                    <div class="md:mr-4 flex-shrink-0">
                        <div>
                            <img src="{{ user | avatar }}" alt="" class="rounded-full w-24 h-24 object-cover border-2 border-primary-900 dark:border-primary-300 p-0.5">
                        </div>
                    </div>
                    <div class="text-center md:text-left">
                        <h2 class="h2">{{ user.fullname }}</h2>
                        <p class="text-muted text-sm">
                            <span>Inscrit <span class="lowercase">{{ user.createdAt | ago }}</span></span>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <nav-tabs class="nav-tabs-bar container-box">
        <a href="#activity" data-tab-id="activity">
            {{ icon('history') }}
            Activité
        </a>
    </nav-tabs>

    <div class="container-box pt-5 pb-10 stack-large bg-slate-50 dark:bg-primary-1000 grid grid-cols-1 gap-4">
        <div id="activity">
            <h2 class="h3">Activité</h2>

        </div>
    </div>




{% endblock %}
