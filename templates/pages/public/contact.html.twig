{% extends 'layouts/public/base.html.twig' %}

{% block title %}Contact | Lazare Fortune - Développeur Web PHP FullStack{% endblock %}

{% block meta_description %}
    <meta name="description" content="Contactez Lazare Fortune, développeur web PHP FullStack, en remplissant ce formulaire.">
{% endblock %}

{% block body %}

    <header class="page-header">
        <div class="container-box">
            <h1 class="h1">
                Me <span class="text-lead">contacter</span>
            </h1>
            <p class="text-muted">
                Vous pouvez me contacter en remplissant le formulaire ci-dessous.
            </p>
        </div>
    </header>

    <section class="container-box pb-10">
        <div class="stack">

            {{ include('partials/flash.html.twig') }}

            {{ form_start(form, {
                'attr': {'class': 'stack'},
                'action': path('app_contact'),
                'method': 'POST'
            }) }}

            <div class="stack">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    {{ form_row(form.name) }}
                    {{ form_row(form.email) }}
                </div>

                {{ form_row(form.subject) }}
                {{ form_row(form.message) }}

                <!-- Centrer le captcha sur mobile -->
                <div class="flex justify-center md:justify-start">
                    {{ form_row(form.captcha) }}
                </div>
            </div>

            <div class="text-end mt-4">
                <button type="submit" class="btn btn-primary">
                    Envoyer le message
                </button>
            </div>

            {{ form_end(form) }}
        </div>
    </section>

{% endblock %}
