{% endblock %}

{% block body %}

    <header class="page-header py-12">
        <div class="container-box text-center">
            <h1 class="h1 text-4xl font-extrabold">
                Me <span class="text-lead">contacter</span>
            </h1>
            <p class="text-lg mt-4">
                Vous pouvez me contacter en remplissant le formulaire ci-dessous.
            </p>
        </div>
    </header>

    <section class="container-box py-16">
        <div class="max-w-3xl mx-auto">
            {{ include('partials/flash.html.twig') }}

            {{ form_start(form, {
                'attr': {'class': 'space-y-6'},
                'action': path('app_contact'),
                'method': 'POST'
            }) }}

            <div class="space-y-6">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    {{ form_row(form.name, {
                    }) }}
                    {{ form_row(form.email, {
                    }) }}
                </div>

                {{ form_row(form.subject, {
                }) }}
                {{ form_row(form.message, {
                }) }}

                <div class="inline-flex">
                    {{ form_row(form.captcha, {
                        'attr': {'class': 'border rounded-md shadow-sm'}
                    }) }}
                </div>
            </div>

            <div class="text-center md:text-left mt-8">
                <button type="submit" class="btn btn-primary">
                    Envoyer le message
                </button>
            </div>

            {{ form_end(form) }}
        </div>
    </section>

{% endblock %}
