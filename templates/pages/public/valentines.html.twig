particleCount: 80,
angle: 120,
spread: 55,
origin: {
x: 1
},
colors: colors
});
}, 200);
}
}

document.addEventListener('click', function (e) {
if (e.target.classList.contains('btn-yes-global')) {
showSuccess();
return;
}
if (e.target.classList.contains('btn-no-screen')) {
const screen = e.target.closest('.screen');
const num = parseInt(screen.getAttribute('data-screen'), 10);
if (num < totalScreens) {
showScreen(num + 1);
}
}
});
