{% extends 'layouts/public/base.html.twig' %}

{% block title "Playlist | " ~ formation.title %}

{% block meta %}
    <meta name="description" content="{{ formation.short }}">
{% endblock %}

{% block body %}
    <!-- Hero Section -->
    <header class="relative bg-gradient-to-br from-slate-50 via-white to-blue-50 dark:from-slate-900 dark:via-slate-800 dark:to-slate-900 overflow-hidden">
        <!-- Background decoration -->
        <div class="absolute inset-0 bg-grid-slate-100 dark:bg-grid-slate-800/25 [mask-image:linear-gradient(0deg,white,rgba(255,255,255,0.6))]"></div>

        <div class="relative container-box py-16">
            <div class="formation__breadcrumb mb-8">
                {{ breadcrumb(formation) }}
            </div>

            <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
                <!-- Contenu principal -->
                <div class="space-y-8">
                    <!-- Badge de mise à jour -->
                    <div class="inline-flex items-center gap-2 bg-primary-100 text-primary-700 dark:bg-primary-900 dark:text-primary-300 text-sm font-medium px-4 py-2 rounded-full">
                        <div class="w-2 h-2 bg-primary-500 rounded-full animate-pulse"></div>
                        Mis à jour {{ formation.updatedAt | ago }}
                    </div>

                    <!-- Titre principal -->
                    <div class="space-y-4">
                        <h1 class="text-4xl lg:text-6xl font-bold text-slate-900 dark:text-white leading-tight">
                            {{ formation.title }}
                        </h1>

                        {% if formation.short %}
                            <p class="text-xl text-slate-600 dark:text-slate-300 leading-relaxed">
                                {{ formation.short }}
                            </p>
                        {% endif %}
                    </div>

                    <!-- Barre de progression -->
                    {% if progress %}
                        <div class="bg-white dark:bg-slate-800 rounded-2xl p-6 shadow-lg border border-slate-200 dark:border-slate-700">
                            <div class="flex items-center justify-between mb-3">
                                <span class="text-sm font-semibold text-slate-700 dark:text-slate-300">Votre progression</span>
                                <span class="text-sm font-bold text-primary-600 dark:text-primary-400">{{ (progress.ratio * 100) | round(0) }}%</span>
                            </div>
                            <div class="w-full bg-slate-200 dark:bg-slate-700 h-3 rounded-full overflow-hidden">
                                <div class="h-3 bg-gradient-to-r from-primary-500 to-primary-600 rounded-full transition-all duration-500 ease-out"
                                     style="width: {{ progress.ratio * 100 }}%;"></div>
                            </div>
                        </div>
                    {% endif %}

                    <!-- Bouton d'action principal -->
                    <div class="pt-4">
                        {% if progress %}
                            <a href="{{ path('app_formation_resume', {slug: formation.slug}) }}#autoplay"
                               class="inline-flex items-center gap-3 bg-primary-600 hover:bg-primary-700 text-white font-semibold px-8 py-4 rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-105">
                                {{ icon('play', 20) }}
                                <span>{{ progress.ratio == 1 ? 'Revoir la playlist' : 'Continuer la playlist' }}</span>
                            </a>
                        {% elseif formation.firstContent %}
                            <a href="{{ path('app_course_show', {slug: formation.firstContent.slug}) }}#autoplay"
                               class="inline-flex items-center gap-3 bg-primary-600 hover:bg-primary-700 text-white hover:text-white dark:text-white dark:hover:text-white font-semibold px-8 py-4 rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-105">
                                {{ icon('play', 20) }}
                                <span>Commencer maintenant</span>
                            </a>
                        {% endif %}
                    </div>
                </div>

                <!-- Image de la formation (masquée sur mobile) -->
                <div class="relative flex justify-center hidden lg:flex">
                    <div class="relative w-full h-80 rounded-3xl overflow-hidden shadow-2xl">
                        {% if formation.image is not empty %}
                            <img src="{{ formation.image | image }}"
                                 alt="{{ formation.title }}"
                                 class="w-full h-full object-cover">
                        {% elseif formation.mainTechnologies is not empty %}
                            <img src="{{ uploads_path('icons/' ~ formation.mainTechnologies[0].image) }}"
                                 alt="{{ formation.title }}"
                                 class="w-full h-full object-cover">
                        {% endif %}

                        <!-- Overlay décoratif -->
                        <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent"></div>
                    </div>

                    <!-- Éléments décoratifs -->
                    <div class="absolute -top-4 -right-4 w-24 h-24 bg-primary-200 dark:bg-primary-800 rounded-full opacity-60"></div>
                    <div class="absolute -bottom-4 -left-4 w-16 h-16 bg-blue-200 dark:bg-blue-800 rounded-full opacity-40"></div>
                </div>
            </div>
        </div>
    </header>

    <!-- Section principale avec layout 2/3 - 1/3 -->
    <main class="bg-white dark:bg-slate-900 py-16">
        <div class="container-box">
            <!-- Layout Desktop : 2/3 - 1/3 -->
            <div class="hidden lg:grid lg:grid-cols-3 gap-12">
                <!-- Colonne gauche : Chapitres (1/3) -->
                <div class="lg:col-span-1">
                    <div class="sticky top-8">
                        <h2 class="text-4xl font-bold text-slate-900 dark:text-white mb-6">
                            Chapitres
                        </h2>

                        {% if formation.chapters %}
                            <div class="space-y-6">
                                {% include 'pages/public/formations/chapters/_list.html.twig' with {chapters: formation.chapters} only %}
                            </div>
                        {% else %}
                            <div class="bg-slate-50 dark:bg-slate-800 rounded-xl p-6 text-center">
                                <div class="mb-4">
                                    <div class="bg-primary-100 dark:bg-primary-500 p-4 rounded-full inline-block">
                                        {{ icon('video-off', 25) }}
                                    </div>
                                </div>
                                <h3 class="text-lg font-medium mb-2">Bientôt disponible !</h3>
                                <p class="text-sm text-slate-600 dark:text-slate-400">Cette playlist est en cours de création.</p>
                            </div>
                        {% endif %}
                    </div>
                </div>

                <!-- Colonne droite : Présentation (2/3) -->
                <div class="lg:col-span-2">
                    <div class="space-y-12">
                        <!-- Présentation de la formation -->
                        <div>
                            <h2 class="text-4xl font-bold text-slate-900 dark:text-white mb-6">
                                Présentation
                            </h2>

                            <div class="space-y-8">
                                <!-- Player YouTube du first content -->
                                {% if formation.firstContent %}
                                    <div>
                                        <progress-tracker contentId="{{ formation.firstContent.id }}" data-history="{{ formation.firstContent.id }}"
                                                          duration="{{ formation.firstContent.duration }}">
                                            <youtube-player
                                                id="course-{{ formation.firstContent.id }}"
                                                video="{{ formation.firstContent.youtubeId }}"
                                                poster="{{ image_url(formation.firstContent.image, 1330, 750) }}"
                                                duration="{{ formation.firstContent.duration | duration }}"
                                                button="#chapter{{ formation.firstContent.id }} play-button"
                                                class="shadow formation-intro rounded-xl overflow-hidden"></youtube-player>
                                        </progress-tracker>
                                    </div>
                                {% endif %}

                                <!-- Contenu de la formation -->
                                <div>
                                    <div class="prose dark:prose-dark max-w-none">
                                        <div class="formatted">{{ formation.content | markdown }}</div>
                                    </div>
                                    <div class="text-slate-500 dark:text-slate-400 text-sm mt-4">
                                        {{ formation.createdAt | ago }}
                                    </div>
                                </div>

                                <!-- Liens utiles et informations -->
                                <div class="grid md:grid-cols-2 gap-6">
{#                                    {% if formation.links is not empty %}#}
{#                                        <div class="bg-slate-50 dark:bg-slate-800 rounded-xl p-6">#}
{#                                            <h3 class="text-lg font-semibold text-slate-900 dark:text-white mb-4">Liens utiles</h3>#}
{#                                            <div class="prose dark:prose-dark max-w-none text-sm">#}
{#                                                {{ formation.links | markdown }}#}
{#                                            </div>#}
{#                                        </div>#}
{#                                    {% endif %}#}

                                    <div class="bg-slate-50 dark:bg-slate-800 rounded-xl p-6">
                                        <h3 class="text-lg font-semibold text-slate-900 dark:text-white mb-4">Informations</h3>
                                        <ul class="space-y-2 text-slate-600 dark:text-slate-400">
                                            <li>{{ formation.duration | duration }} de vidéos</li>
                                            <li>{{ formation.chapters | length }} chapitres</li>
                                        </ul>
                                    </div>
                                </div>

                                <!-- Prérequis -->
                                {% if formation.secondaryTechnologies is not empty %}
                                    <div class="bg-slate-50 dark:bg-slate-800 rounded-xl p-6">
                                        <h3 class="text-lg font-semibold text-slate-900 dark:text-white mb-4">Prérequis</h3>
                                        <ul class="space-y-2">
                                            {% for technology in formation.secondaryTechnologies %}
                                                <li>
                                                    <a href="{{ path('app_technology_show', {slug: technology.slug}) }}"
                                                       class="text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 transition-colors">
                                                        {{ technology.name }}
                                                    </a>
                                                </li>
                                            {% endfor %}
                                        </ul>
                                    </div>
                                {% endif %}
                            </div>
                        </div>


                        {% if is_granted('ROLE_SUPER_ADMIN') %}
                            <div class="text-center">
                                <a href="{{ path('studio_formation_edit', {id: formation.id}) }}"
                                   target="_blank"
                                   class="inline-flex items-center px-4 py-2 text-sm font-medium text-slate-600 dark:text-slate-400 border border-slate-300 dark:border-slate-600 rounded-lg hover:bg-slate-50 dark:hover:bg-slate-700 transition">
                                    {{ icon('pencil') }}
                                    <span class="ml-2">Modifier la playlist</span>
                                </a>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>

            <!-- Layout Mobile : Présentation puis Chapitres -->
            <div class="lg:hidden space-y-12">
                <!-- Présentation de la formation (en premier sur mobile) -->
                <div>
                    <h2 class="text-3xl font-bold text-slate-900 dark:text-white mb-6">
                        Présentation
                    </h2>

                    <div class="space-y-6">
                        <!-- Player YouTube du first content -->
                        {% if formation.firstContent %}
                            <div>
                                <progress-tracker contentId="{{ formation.firstContent.id }}" data-history="{{ formation.firstContent.id }}"
                                                  duration="{{ formation.firstContent.duration }}">
                                    <youtube-player
                                        id="course-{{ formation.firstContent.id }}"
                                        video="{{ formation.firstContent.youtubeId }}"
                                        poster="{{ image_url(formation.firstContent.image, 1330, 750) }}"
                                        duration="{{ formation.firstContent.duration | duration }}"
                                        button="#chapter{{ formation.firstContent.id }} play-button"
                                        class="shadow formation-intro rounded-xl overflow-hidden"></youtube-player>
                                </progress-tracker>
                            </div>
                        {% endif %}

                        <!-- Contenu de la formation -->
                        <div>
                            <div class="prose dark:prose-dark max-w-none">
                                <div class="formatted">{{ formation.content | markdown }}</div>
                            </div>
                            <div class="text-slate-500 dark:text-slate-400 text-sm mt-4">
                                {{ formation.createdAt | ago }}
                            </div>
                        </div>

                        <!-- Liens utiles et informations -->
                        <div class="space-y-4">
