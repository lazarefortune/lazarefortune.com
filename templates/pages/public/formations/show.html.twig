{#                                <div class="bg-slate-50 dark:bg-slate-800 rounded-xl p-4">#}
{#                                    <h3 class="text-lg font-semibold text-slate-900 dark:text-white mb-3">Liens utiles</h3>#}
{#                                    <div class="prose dark:prose-dark max-w-none text-sm">#}
{#                                        {{ formation.links | markdown }}#}
{#                                    </div>#}
{#                                </div>#}
{#                            {% endif %}#}

                            <div class="bg-slate-50 dark:bg-slate-800 rounded-xl p-4">
                                <h3 class="text-lg font-semibold text-slate-900 dark:text-white mb-3">Informations</h3>
                                <ul class="space-y-2 text-slate-600 dark:text-slate-400 text-sm">
                                    <li>{{ formation.duration | duration }} de vidéos</li>
                                    <li>{{ formation.chapters | length }} chapitres</li>
                                </ul>
                            </div>

                            <!-- Prérequis -->
                            {% if formation.secondaryTechnologies is not empty %}
                                <div class="bg-slate-50 dark:bg-slate-800 rounded-xl p-4">
                                    <h3 class="text-lg font-semibold text-slate-900 dark:text-white mb-3">Prérequis</h3>
                                    <ul class="space-y-2 text-sm">
                                        {% for technology in formation.secondaryTechnologies %}
                                            <li>
                                                <a href="{{ path('app_technology_show', {slug: technology.slug}) }}"
                                                   class="text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 transition-colors">
                                                    {{ technology.name }}
                                                </a>
                                            </li>
                                        {% endfor %}
                                    </ul>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>

                <!-- Chapitres (en dernier sur mobile) -->
                <div>
                    <h2 class="text-2xl font-bold text-slate-900 dark:text-white mb-6">
                        Chapitres
                    </h2>

                    {% if formation.chapters %}
                        <div class="space-y-6">
                            {% include 'pages/public/formations/chapters/_list.html.twig' with {chapters: formation.chapters} only %}
                        </div>
                    {% else %}
                        <div class="bg-slate-50 dark:bg-slate-800 rounded-xl p-6 text-center">
                            <div class="mb-4">
                                <div class="bg-primary-100 dark:bg-primary-500 p-4 rounded-full inline-block">
                                    {{ icon('video-off', 25) }}
                                </div>
                            </div>
                            <h3 class="text-lg font-medium mb-2">Bientôt disponible !</h3>
                            <p class="text-sm text-slate-600 dark:text-slate-400">Cette playlist est en cours de création.</p>
                        </div>
                    {% endif %}
                </div>

                {% if is_granted('ROLE_SUPER_ADMIN') %}
                    <div class="text-center">
                        <a href="{{ path('studio_formation_edit', {id: formation.id}) }}"
                           target="_blank"
                           class="inline-flex items-center px-4 py-2 text-sm font-medium text-slate-600 dark:text-slate-400 border border-slate-300 dark:border-slate-600 rounded-lg hover:bg-slate-50 dark:hover:bg-slate-700 transition">
                            {{ icon('pencil') }}
                            <span class="ml-2">Modifier la playlist</span>
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>
    </main>
{% endblock %}
