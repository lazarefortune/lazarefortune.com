            <div class="absolute bottom-1/3 left-1/4 w-24 h-24 bg-gradient-to-br from-green-400 to-green-600 rounded-full opacity-20 dark:opacity-30 blur-2xl"></div>
        </div>

        <!-- Effet de fondu vers le bas - plus subtil -->
        <div class="absolute bottom-0 left-0 right-0 h-40 bg-gradient-to-t from-white dark:from-slate-900 via-white/90 dark:via-slate-900/90 to-transparent"></div>

        <div class="container-box relative z-10 text-center py-16">
            <!-- Badge gratuit -->
            <div class="inline-flex items-center gap-2 bg-primary-100 text-primary-700 dark:bg-primary-900 dark:text-primary-300 text-sm font-medium px-4 py-2 rounded-full mb-8 reveal">
                <div class="w-2 h-2 bg-primary-500 rounded-full animate-pulse"></div>
                Contenu 100% gratuit
            </div>

            <h1 class="mx-auto max-w-4xl mb-6 font-display text-4xl lg:text-7xl font-medium lg:font-semibold tracking-normal text-slate-900 dark:text-white sm:text-7xl reveal">
