                    </div>

                    <!-- Card 2 -->
                    <div class="text-center">
                        <div class="w-16 h-16 bg-green-100 dark:bg-green-900 rounded-2xl flex items-center justify-center mx-auto mb-6">
                            {{ icon('gallery-vertical-end', '32') }}
