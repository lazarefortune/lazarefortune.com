    <section class="relative min-h-[80vh] flex items-center justify-center overflow-hidden">
        <!-- Fond dégradé moderne -->
        <div class="absolute inset-0 bg-gradient-to-br from-slate-50 via-white to-blue-50 dark:from-primary-950 dark:via-primary-950 dark:to-primary-1000"></div>

        <!-- Grille de fond -->
        <div class="absolute inset-0 bg-grid-pattern opacity-30 dark:opacity-20"></div>

        <!-- Formes géométriques décoratives -->
        <div class="absolute inset-0 overflow-hidden pointer-events-none">
            <!-- Cercle principal -->
            <div class="absolute top-1/4 -left-32 w-96 h-96 bg-gradient-to-br from-primary-400 to-primary-600 rounded-full opacity-20 dark:opacity-30 blur-3xl"></div>

            <!-- Cercle secondaire -->
