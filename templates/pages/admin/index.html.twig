{% extends 'layouts/admin/base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}

    <h1 class="text-2xl sm:text-2xl font-medium text-slate-950  dark:text-white">Salut, <span class="text-primary-700 dark:text-primary-400">{{ app.user.fullname }}</span> </h1>

    {% if is_granted('ROLE_SUPER_ADMIN') %}
    <div class="mt-4 grid gap-8 sm:grid-cols-2 xl:grid-cols-4">
        <div class="border border-slate-200 dark:border-slate-700 rounded-xl p-4">
            {#
            <hr role="presentation" class="w-full border-t border-zinc-950/10 dark:border-white/10">
            #}
            <div class="mt-6 text-3xl font-medium sm:text-3xl">{{ countUsers }}</div>
            <div class="text-lg font-normal sm:text-base text-slate-500 dark:text-slate-300">Utilisateurs</div>
            <!--
            <div class="mt-3 text-sm/6 sm:text-xs/6"><span
                    class="inline-flex items-center gap-x-1.5 rounded-md px-1.5 py-0.5 text-sm/5 font-medium sm:text-xs/5 forced-colors:outline bg-lime-400/20 text-lime-700 group-data-[hover]:bg-lime-400/30 dark:bg-lime-400/10 dark:text-lime-300 dark:group-data-[hover]:bg-lime-400/15">+4.5%</span>
            <span class="text-zinc-500">from last week</span></div>
            -->
        </div>
        <div class="border border-slate-200 dark:border-slate-700 rounded-xl p-4">
            <div class="mt-6 text-3xl font-medium sm:text-3xl">{{ youtubeSubscribersCount }}</div>
            <div class="text-lg font-normal sm:text-base text-slate-500 dark:text-slate-300">Abonnés YouTube</div>
        </div>
        <div class="border border-slate-200  dark:border-slate-700 rounded-xl p-4">
            <div class="mt-6 text-3xl font-medium sm:text-3xl">{{ countOnlineFormations }}</div>
            <div class="text-lg font-normal sm:text-base text-slate-500 dark:text-slate-300">Formations</div>
        </div>
        <div class="border border-slate-200  dark:border-slate-700 rounded-xl p-4">
            <div class="mt-6 text-3xl font-medium sm:text-3xl">{{ countOnlineCourses }}</div>
            <div class="text-lg font-normal sm:text-base text-slate-500 dark:text-slate-300">Vidéos</div>
        </div>
    </div>

    <div class="mt-20 stack">
        <h2 class="h3">Stats utilisateurs</h2>

        <div>
            <nav-tabs class="nav-tabs">
                <a href="#day" aria-controls="day">30 derniers jours</a>
                <a href="#month" aria-controls="month">24 derniers mois</a>
            </nav-tabs>
            <div class="nav-tabs--content">
                <div id="day">
                    <line-chart points="{{ dailyUsersLast30Days | json_encode }}" x="day" y="users"></line-chart>
                </div>
                <div id="month">
                    <line-chart points="{{ monthlyUsersLast24Months | json_encode }}" x="month" y="users"></line-chart>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-16 grid2">
        <div>
            <div class="stack border border-slate-200 dark:border-slate-800 rounded-lg px-4 py-7">
                <div class="mb-4">
                    <h2 class="h3">Cache système</h2>
                    <p class="text-muted">Vider le cache du système pour éviter les problèmes de
                        performance</p>
                </div>

                <form action="{{ path('admin_cache_clean') }}" method="post">
                    <button class="btn btn-primary">{{ icon('trash') }} Vider le cache</button>
                </form>
            </div>
        </div>

        <div>
            <div class="stack border border-slate-200 dark:border-slate-800 rounded-lg px-4 py-7">
                <div>
                    <h2 class="h3">Système de mail</h2>
                    <p class="text-muted">Envoyer un email de test pour vérifier que le serveur
                        fonctionne correctement</p>
                </div>

                <div>
                    {{ form_start(formTestEmail) }}
                    {{ form_widget(formTestEmail.email, { 'attr': { 'placeholder': 'Saisir une adresse email' } }) }}
                    <button type="submit" class="btn btn-primary mt-4">Envoyer un email</button>
                    {{ form_end(formTestEmail) }}
                </div>
            </div>
        </div>
    </div>
    {% endif %}

    {% include 'pages/admin/partials/_last_course.html.twig' with { 'lastCourses': lastCourses } %}
{% endblock %}
