{% extends 'form_div_layout.html.twig' %}


{% block switch_row %}
    {% include 'components/_switch.html.twig' %}
{% endblock %}


{% block money_widget %}
    <div class="relative mt-2 rounded-md shadow-sm">
        <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center pr-3">
        <span class="text-gray-500 sm:text-md">
            {{ form.vars.currency|default('â‚¬') }}
        </span>
        </div>
        <input type="text"
                {{ block('widget_attributes') }}
               value="{{ form.vars.value }}"
               placeholder="0.00">
    </div>
{% endblock %}

{% block form_row %}
    <div class="flex flex-col gap-1">
        {{ form_label(form, null, { 'label_attr': {'class': 'label'} }) }}
        {{ form_widget(form) }}
        {% if form.vars.errors %}
            <div class="form-error">
                {{ form_errors(form) }}
            </div>
        {% endif %}
    </div>
{% endblock %}

 {% block choice_widget_expanded %}
     <div {{ block('widget_container_attributes') }}>
         {% for child in form %}
             <div class="flex items-center space-x-2">
                 {{ form_widget(child) }}
                 {{ form_label(child) }}
             </div>
         {% endfor %}
     </div>
 {% endblock %}

{% block choice_multiple_row %}
    <div class="flex flex-col gap-1">
        {{ form_label(form) }}
        <div {{ block('widget_container_attributes') }} class="w-full">
            <ul class="flex flex-wrap gap-3">
                {% for child in form %}
                    <li>
                        <input type="checkbox" id="{{ child.vars.id }}" value="{{ child.vars.value }}"
                               class="hidden peer"
                               {% if child.vars.checked %}checked{% endif %}
                               name="{{ full_name ~ '[]' }}"
                                {{ block('widget_attributes') }}
                        >
                        <label for="{{ child.vars.id }}"
                               class="flex items-center justify-between w-full px-5 py-1.5 text-gray-500 bg-white border-2 border-gray-200 rounded cursor-pointer peer-checked:border-primary-600 hover:text-gray-600 peer-checked:text-primary-600 hover:bg-gray-50">
                            <span class="text-base">{{ child.vars.label }}</span>
                        </label>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}

{% block slot_choice_row %}
    {{ form_label(form) }}
    <div {{ block('widget_container_attributes') }} class="w-full">
        <ul class="flex flex-wrap gap-3">
            {% for child in form %}
                <li class="w-full sm:w-1/3 lg:w-1/4">
                    <input type="radio" id="{{ child.vars.id }}" value="{{ child.vars.value }}" class="hidden peer"
                           {% if child.vars.checked %}checked{% endif %}
                           name="{{ full_name }}"
                            {{ block('widget_attributes') }}
                    >
                    <label for="{{ child.vars.id }}"
                           class="flex items-center justify-between w-full px-5 py-2 text-gray-600 bg-white border-2
                           border-gray-300 rounded cursor-pointer peer-checked:border-primary-600 hover:text-primary-700
                           peer-checked:text-primary-700 hover:bg-gray-100 transition duration-200 ease-in-out">
                        <span class="text-base mx-auto">{{ child.vars.label }}</span>
                    </label>
                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}

