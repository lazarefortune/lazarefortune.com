{% extends 'layouts/public/base.html.twig' %}

{% block body %}
    <div class="auth-wrapper relative min-h-[calc(100vh-200px)] flex items-center justify-center py-10 overflow-hidden">
        <!-- Fond dégradé moderne -->
        <div class="absolute inset-0 bg-gradient-to-br from-slate-50 via-white to-primary-50 dark:from-primary-950 dark:via-primary-950 dark:to-primary-1000"></div>

        <!-- Grille de fond -->
        <div class="absolute inset-0 bg-grid-pattern opacity-20 dark:opacity-10"></div>

        <!-- Formes géométriques décoratives -->
        <div class="absolute inset-0 overflow-hidden pointer-events-none">
            <!-- Cercle principal -->
            <div class="absolute top-1/4 -left-40 w-96 h-96 bg-gradient-to-br from-primary-400 to-primary-600 rounded-full opacity-15 dark:opacity-20 blur-3xl"></div>

            <!-- Cercle secondaire -->
            <div class="absolute bottom-1/4 -right-40 w-80 h-80 bg-gradient-to-br from-blue-400 to-blue-600 rounded-full opacity-15 dark:opacity-20 blur-3xl"></div>

            <!-- Forme géométrique -->
            <div class="absolute top-1/3 right-1/4 w-32 h-32 bg-gradient-to-br from-purple-400 to-purple-600 rounded-2xl opacity-10 dark:opacity-15 blur-2xl rotate-45"></div>
        </div>

        <!-- Contenu -->
        <div class="auth-container relative z-10 mt-10 mb-10">
            <div class="auth-card">
                {% block auth_body %}{% endblock %}
            </div>
        </div>
    </div>
{% endblock %}
