{% extends 'admin/base.html.twig' %}

{% block title %}Toutes les réalisations{% endblock %}

{% block body %}

    <div class="dashboard-page-header">
        <nav class="flex" aria-label="Breadcrumb">
            <ol class="inline-flex items-center space-x-1 md:space-x-2 rtl:space-x-reverse">
                <li class="inline-flex items-center">
                    <a href="{{ path('app_admin_home') }}"
                       class="inline-flex items-center text-sm font-medium text-gray-700 hover:text-primary-600">
                        <svg class="w-3 h-3 me-2.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg"
                             fill="currentColor" viewBox="0 0 20 20">
                            <path d="m19.707 9.293-2-2-7-7a1 1 0 0 0-1.414 0l-7 7-2 2a1 1 0 0 0 1.414 1.414L2 10.414V18a2 2 0 0 0 2 2h3a1 1 0 0 0 1-1v-4a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v4a1 1 0 0 0 1 1h3a2 2 0 0 0 2-2v-7.586l.293.293a1 1 0 0 0 1.414-1.414Z"></path>
                        </svg>
                        Accueil
                    </a>
                </li>
                <li aria-current="page">
                    <div class="flex items-center">
                        {{ icon('chevron-right') }}
                        <span class="ms-1 text-sm font-medium text-gray-500 md:ms-2 dark:text-gray-400">Réalisations</span>
                    </div>
                </li>
            </ol>
        </nav>
    </div>

    <div class="dashboard-page-table-button">
        <a href="{{ path('app_admin_realisation_new') }}"
           class="">
            {{ icon('plus') }}
            <span>
                Ajouter
            </span>
        </a>
    </div>

    <div>
        <div class="block w-full overflow-x-auto border rounded">
            <table class="table w-full border-collapse items-center bg-transparent">
                <thead>
                <tr>
                    <th>
                        Date
                    </th>
                    <th>
                        Durée
                    </th>
                    <th>
                        Tarif
                    </th>
                    <th>
                        Visibilité
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
                </thead>
                <tbody>
                {% if realisations|length == 0 %}
                    <tr>
                        <td colspan="5" class="text-center">
                            Aucune donnée disponible
                        </td>
                    </tr>
                {% endif %}
                {% for realisation in realisations %}
                    <tr>
                        <td>{{ realisation.dateRealisation|human_date }}</td>
                        <td>{{ realisation.duration|duration_format }}</td>
                        <td>{{ realisation.amount|price_format }}</td>
                        <td>
                            {% if realisation.isOnline %}
                                <span class="badge badge-success">En ligne</span>
                            {% else %}
                                <span class="badge badge-danger">Hors ligne</span>
                            {% endif %}
                        </td>
                        <td>
                            <a href="{{ path('app_admin_realisation_show', {'id': realisation.id}) }}"
                               class="btn-icon">
                                {{ icon('eye') }}
                            </a>
                            <a href="{{ path('app_admin_realisation_edit', {'id': realisation.id}) }}"
                               class="btn-icon">
                                {{ icon('pencil') }}
                            </a>
                            <button
                                    class="btn-icon modal-button" data-modal-id="modal-id-{{ realisation.id }}">
                                {{ icon('trash') }}
                            </button>

                        </td>
                        {% include 'components/_delete-modal.html.twig' with {
                            'id': 'modal-id-' ~ realisation.id,
                            'title': 'Supprimer la réalisation',
                            'content': 'Vous êtes sur le point de supprimer la réalisation n°' ~ realisation.id ~ ' du ' ~ realisation.dateRealisation|human_date ~ '.',
                            'form_action': path('app_admin_realisation_delete', {'id': realisation.id}),
                            'csrf_value': csrf_token('delete' ~ realisation.id),
                            'btn_label': 'Supprimer'
                        } %}
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

