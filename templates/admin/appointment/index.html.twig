{% extends 'admin/base.html.twig' %}

{% block title %}Mes rendez-vous{% endblock %}

{% import 'admin/appointment/macros.twig' as element %}

{% block body %}
    <div class="dashboard-page-header">
        <nav class="breadcrumb" aria-label="Breadcrumb">
            <ol>
                <li>
                    <a href="{{ path('app_admin_home') }}">
                        <svg class="w-3 h-3 me-2.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg"
                             fill="currentColor" viewBox="0 0 20 20">
                            <path d="m19.707 9.293-2-2-7-7a1 1 0 0 0-1.414 0l-7 7-2 2a1 1 0 0 0 1.414 1.414L2 10.414V18a2 2 0 0 0 2 2h3a1 1 0 0 0 1-1v-4a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v4a1 1 0 0 0 1 1h3a2 2 0 0 0 2-2v-7.586l.293.293a1 1 0 0 0 1.414-1.414Z"></path>
                        </svg>
                        Accueil
                    </a>
                </li>
                {{ icon('chevron-right') }}
                <li aria-current="page">
                    <span>Rendez-vous</span>
                </li>
            </ol>
        </nav>
    </div>

    <div class="dashboard-page-table-button">
        <a href="{{ path('app_admin_appointment_new') }}">
            {{ icon('plus') }}
            <span>
                Ajouter
            </span>
        </a>
    </div>

    <div class="block w-full overflow-x-auto border rounded">
        <table class="table w-full border-collapse items-center bg-transparent">
            <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Date
                </th>
                <th>
                    Créneau
                </th>
                <th>
                    Client
                </th>
                <th>
                    Statut
                </th>
                <th>
                    Paiement
                </th>
                <th>
                    Actions
                </th>
            </tr>
            </thead>
            <tbody>
            {% if appointments is empty %}
                <tr>
                    <td colspan="7" class="text-center">
                        Aucune donnée disponible
                    </td>
                </tr>
            {% endif %}
            {% for appointment in appointments %}
                <tr>
                    <td>
                        {{ appointment.id }}
                    </td>
                    <td class="flex items-center gap-3 {% if appointment.date|date('Y-m-d') < 'now'|date('Y-m-d') %}bg-red-100{% endif %} {% if appointment.date|date('Y-m-d') == 'now'|date('Y-m-d') %}bg-blue-100{% endif %}">
                        {{ appointment.date|date('d/m/Y') }}
                    </td>
                    <td>
                        {{ appointment.startTime|date('H:i') }} - {{ appointment.endTime|date('H:i') }}
                    </td>
                    <td>
                        <a href="{{ path('app_admin_users_show', {id: appointment.client.id}) }}">
                            {{ appointment.client.fullName }}
                        </a>
                    </td>
                    <td>
                        <div class="badge badge-{% if appointment.status == 'confirmed' %}success{% elseif appointment.status == 'pending' %}warning{% else %}danger{% endif %}">
                            {{ appointment.status }}
                        </div>
                    </td>
                    <td>
                        <div class="badge badge-{% if appointment.isPaid %}success{% else %}danger{% endif %}">
                            {% if appointment.isPaid %}
                                Payé
                            {% else %}
                                Non payé
                            {% endif %}
                        </div>
                    </td>
                    <td>
                        <a href="{{ path('app_admin_appointment_show', {id: appointment.id}) }}"
                           class="btn-icon">
                            {{ icon('eye') }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    {% if appointments.getTotalItemCount > 5 %}
        <div class="flex justify-center mt-6">
            {{ knp_pagination_render(appointments) }}
        </div>
    {% endif %}
{% endblock %}
