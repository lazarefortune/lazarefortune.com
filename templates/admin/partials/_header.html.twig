<header class="lg:pl-[300px] fixed top-0 left-0 z-30 w-full border-b bg-white dark:bg-slate-900 dark:border-b-muted shadow-sm">
    <div class="flex items-center justify-between px-4 md:px-8 py-4">
        <div class="flex items-center gap-2">
            <button id="sidebar-button" class="btn-sidebar lg:hidden">
                <span id="btnSidebarOpen" class="hidden">{{ icon('x') }}</span>
                <span id="btnSidebarClose">{{ icon('menu') }}</span>
            </button>
            <button id="spotlight--trigger" class="text-slate-600">
                {{ icon('search', 24) }}
            </button>
        </div>
        <div class="flex items-center gap-3">
            <div class="relative">
                <button class="btn-icon">
                    {{ icon('bell') }}
                </button>
                <span class="absolute top-0 right-0 w-3 h-3 bg-red-500 rounded-full"></span>
            </div>
            <div class="relative">
                <button class="btn-icon">
                    {{ icon('mail') }}
                </button>
                <span class="absolute top-0 right-0 w-3 h-3 bg-red-500 rounded-full"></span>
            </div>


            <div class="relative">
                <!-- user info -->
                <button id="user-button" class="flex items-center gap-2 hover:bg-slate-100 p-2 rounded-md dark:hover:bg-slate-800">
                    {% if app.user.avatar %}
                        <img class="h-9 w-9 rounded-full" src="{{ asset('images/coiffure.webp') }}"
                             alt="Your avatar">
                    {% else %}
                        <div class="h-9 w-9 rounded-full bg-gray-300 flex items-center justify-center">
                            {{ icon('user') }}
                        </div>
                    {% endif %}
                    <div class="flex-col hidden md:flex text-start w-44">
                        <span class="text-sm font-semibold">{{ app.user.fullname }}</span>
                        <span class="text-xs text-gray-500 overflow-hidden whitespace-nowrap">
                                        {{ app.user.email|truncate(20) }}
                                    </span>
                    </div>
                </button>
                <div id="user-dropdown"
                     class="absolute right-0 top-[68px] w-64 bg-white dark:bg-slate-900 dark:text-white border border-slate-200 dark:border-slate-800 shadow rounded-md opacity-0 scale-95 transform transition-opacity duration-100 ease-out invisible pointer-events-none">
                    <div class="p-2">
                        <a href="{{ path('app_profile') }}"
                           class="user-dropdown-menu-item {{ menu_active('admin_account') }}">
                            {{ icon('user' ) }}
                            <span>Mon compte</span>
                        </a>
                    </div>
                    <div class="p-2">
                        <a href="{{ path('app_logout') }}"
                           class="user-dropdown-menu-item">
                            {{ icon('log-out' ) }}
                            <span>DÃ©connexion</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>
