<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    {% for row in rows %}

        <div class="border rounded">
            <div class="flex p-5">
                <a href="{{ path('app_admin_clients_show', {id: row.id}) }}" class="flex flex-col flex-grow mr-4">
                    <div class="text-base font-ibmPlexSans font-semibold text-gray-700 mb-2">{{ row.fullname }}</div>
                    <div class="text-sm text-gray-500">{{ row.appointments.count }}
                        rendez-vous
                    </div>
                </a>
                <div class="flex items center justify-center animate-pulse">
                    <div class="w-12 h-12 rounded-full bg-gray-200 animate-pulse"></div>
                </div>
            </div>
            <div class="flex flex-row border-t">
                <a class="p-4 cursor-pointer w-1/2 flex flex-row justify-center items-center gap-2"
                   href="mailto:{{ row.email }}">
                    {{ icon('mail') }}
                    <span>Email</span>
                </a>
                <a class="p-4 cursor-pointer w-1/2 flex flex-row justify-center items-center gap-2 border-l"
                   href="tel:{{ row.phone }}">
                    {{ icon('phone') }}
                    <span>Appel</span>
                </a>
            </div>
        </div>
    {% endfor %}
</div>
