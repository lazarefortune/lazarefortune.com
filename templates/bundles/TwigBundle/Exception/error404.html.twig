{% extends 'bundles/TwigBundle/Exception/base_error.html.twig' %}

{% block title 'Erreur 404' %}

{% block error_title 'Page non trouvée' %}

{% block error_image %}
    <img src="{{ asset('images/illustrations/404.svg') }}" alt="astronaut image" class="w-72 h-auto">
{% endblock %}

{% block error_message %}
    <div class="max-w-xl mx-auto">
        <h1 class="text-5xl font-medium text-slate-900 dark:text-white">Oops! Page non trouvée</h1>
        <p class="mt-2 text-lg text-slate-600 dark:text-slate-300">
            La page que tu cherches n'existe pas. Si tu penses qu'il s'agit d'une erreur, n'hésite pas à
            <a href="{{ path('app_contact') }}">nous contacter</a>.
        </p>
        <a href="" class="btn btn-light mt-5">
            Retourner à l'accueil
        </a>
    </div>
{% endblock %}

