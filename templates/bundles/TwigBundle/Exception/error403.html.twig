{% extends 'bundles/TwigBundle/Exception/base_error.html.twig' %}

{% block title 'Erreur 403' %}

{% block error_title 'Page inaccessible' %}

{% block error_image %}
    <img src="{{ asset('images/illustrations/403.png') }}" alt="Accès refusé"/>
{% endblock %}

{% block error_message %}
    <div class="max-w-xl mx-auto">
        <h1 class="text-5xl font-medium text-slate-900 dark:text-white">Oups! Accès refusé</h1>
        <p class="mt-2 text-lg text-slate-600 dark:text-slate-300">
            Nous sommes désolés, mais vous n'avez pas la permission d'accéder à cette page.
        </p>
        <a href="{{ path('app_home') }}" class="btn btn-light mt-5">
            Retourner à l'accueil
        </a>
    </div>
{% endblock %}
